<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<div>
    {{#if logined}}
        <div style="position: fixed; right: 50px">
            <form method="get" action="/signIn">
                <input type="submit" value="Sign out" style="background:darkcyan; color: white">
            </form>
        </div>
        <div  style="display: flex; justify-content: center">
            <h2 style="color: lightseagreen">WELCOME {{name}}</h2>
        </div>

    <div style="display: flex; justify-content: center; color: darkcyan">
        <ol>
            {{#each users}}
                <li>{{this.name}} - {{this.email}}</li>
            {{/each}}
        </ol>
    {{else}}
    </div>
        <div style="display: flex; justify-content: center">
            <form action="/signIn" method="post">
                <input type="text" name="name" placeholder="Enter your name...">
                <input type="text" name="email" placeholder="Enter your email...">
                <input type="submit" value="Sign In">
            </form>
        </div>
    {{/if}}
</div>

</body>
</html>
